from mit_core.spec import Instruction, InternalExtraInstruction, MitErrorCode
from mit_core.errors import MallocErrorCode, LoadErrorCode, SaveErrorCode
from mit_core.code_util import Code, copyright_banner, enum_to_c


GENERATOR_PROGRAM = 'gen-opcodes'
PURPOSE = 'Instruction opcodes.'
COPYRIGHT_YEARS = '2018-2019'


max_instruction = max([i.value[0] for i in Instruction])
code = copyright_banner(GENERATOR_PROGRAM, PURPOSE, COPYRIGHT_YEARS)
code.append('''
#ifndef MIT_OPCODES
#define MIT_OPCODES


#define MIT_NUM_OPCODES {}

'''.format(max_instruction + 1))
code.append('')
code.extend(enum_to_c(Instruction, lambda i: i.value[0]))
code.append('')
code.extend(enum_to_c(InternalExtraInstruction, lambda i: i.value[0]))
code.append('')
code.extend(enum_to_c(MitErrorCode))
code.append('')
code.extend(enum_to_c(MallocErrorCode))
code.append('')
code.extend(enum_to_c(LoadErrorCode))
code.append('')
code.extend(enum_to_c(SaveErrorCode))
code.append('')
code.append('#endif')

print(code)
