import mit_core.vm_data as vm_data
import extra_instructions

print('''\
# Auto-generated by gen-python-opcodes - DO NOT EDIT.
# Instruction opcodes.


from enum import Enum, IntEnum
''')

print('class Register(Enum):')
for register in vm_data.Register:
    print('    {} = object()'.format(register.name))
print('')

vm_data.Instruction.print_python('Instruction', '')
vm_data.InternalExtraInstruction.print_python('InternalExtraInstruction', 'EXTRA_')

extra_instructions.LibcLib.print_python('LibcLib', 'LIB_C_')
extra_instructions.MitLib.print_python('MitLib', 'LIB_MIT_')
extra_instructions.LibInstruction.print_python('LibInstruction', '')
