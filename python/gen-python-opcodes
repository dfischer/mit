import mit_core.vm_data as vm_data
import extra_instructions
from enum_util import print_enum

print('''\
# Auto-generated by gen-python-opcodes - DO NOT EDIT.
# Instruction opcodes.


from enum import Enum, IntEnum, unique
''')

print('class Register(Enum):')
for register in vm_data.Register:
    print('    {} = object()'.format(register.name))
print('')

print_enum(vm_data.Instruction, 'Instruction', '')
print_enum(vm_data.InternalExtraInstruction, 'InternalExtraInstruction', 'EXTRA_')

print_enum(extra_instructions.LibcLib, 'LibcLib', 'LIB_C_')
print_enum(extra_instructions.MitLib, 'MitLib', 'LIB_MIT_')
print_enum(extra_instructions.LibInstruction, 'LibInstruction', '')
